{
  "openapi": "3.0.0",
  "info": {
    "title": "DSS Books Library API",
    "description": "REST API для управления личной библиотекой книг с полной CRUD функциональностью, рейтингами и заметками",
    "version": "1.0.0",
    "contact": {
      "name": "Daniil Sergeevich Shishkin",
      "email": "dss@library.com",
      "url": "https://github.com/dss"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "/api",
      "description": "Development server"
    }
  ],
  "paths": {
    "/books": {
      "get": {
        "summary": "Получить все книги",
        "description": "Возвращает список всех книг с возможностью фильтрации по статусу чтения и жанру",
        "tags": ["Books"],
        "parameters": [
          {
            "in": "query",
            "name": "status",
            "schema": {
              "type": "string",
              "enum": ["unread", "reading", "completed"]
            },
            "description": "Фильтр по статусу чтения"
          },
          {
            "in": "query",
            "name": "genre",
            "schema": {
              "type": "string"
            },
            "description": "Фильтр по жанру"
          },
          {
            "in": "query",
            "name": "author",
            "schema": {
              "type": "string"
            },
            "description": "Фильтр по автору"
          }
        ],
        "responses": {
          "200": {
            "description": "Список книг получен успешно",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Book"
                      }
                    },
                    "meta": {
                      "type": "object",
                      "properties": {
                        "total": {
                          "type": "number",
                          "example": 25
                        },
                        "completed": {
                          "type": "number",
                          "example": 15
                        },
                        "reading": {
                          "type": "number",
                          "example": 5
                        },
                        "unread": {
                          "type": "number",
                          "example": 5
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Добавить новую книгу",
        "description": "Создает новую книгу в библиотеке с указанными данными",
        "tags": ["Books"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["title", "author", "genre"],
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "Название книги (обязательное поле)",
                    "example": "Война и мир",
                    "maxLength": 200
                  },
                  "author": {
                    "type": "string",
                    "description": "Автор книги (обязательное поле)",
                    "example": "Лев Толстой",
                    "maxLength": 100
                  },
                  "year": {
                    "type": "integer",
                    "description": "Год издания",
                    "example": 1869,
                    "minimum": 1000,
                    "maximum": 2030
                  },
                  "genre": {
                    "type": "string",
                    "description": "Жанр книги (обязательное поле)",
                    "example": "Классическая литература",
                    "maxLength": 50
                  },
                  "pages": {
                    "type": "integer",
                    "description": "Количество страниц",
                    "example": 1225,
                    "minimum": 1
                  },
                  "rating": {
                    "type": "integer",
                    "description": "Рейтинг от 0 до 5 звезд",
                    "example": 5,
                    "minimum": 0,
                    "maximum": 5
                  },
                  "status": {
                    "type": "string",
                    "enum": ["unread", "reading", "completed"],
                    "description": "Статус чтения",
                    "example": "completed"
                  },
                  "notes": {
                    "type": "string",
                    "description": "Личные заметки о книге",
                    "example": "Великолепное произведение о русской истории",
                    "maxLength": 1000
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Книга успешно добавлена",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/Book"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Неверные данные запроса",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/books/{id}": {
      "get": {
        "summary": "Получить книгу по ID",
        "description": "Возвращает конкретную книгу по её идентификатору",
        "tags": ["Books"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "description": "Уникальный идентификатор книги"
          }
        ],
        "responses": {
          "200": {
            "description": "Книга найдена",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/Book"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Книга не найдена",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "400": {
            "description": "Неверный формат ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Обновить книгу",
        "description": "Обновляет существующую книгу. Можно обновить любое поле или несколько полей одновременно",
        "tags": ["Books"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "description": "Уникальный идентификатор книги"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "Новое название книги",
                    "example": "Война и мир (полное издание)",
                    "maxLength": 200
                  },
                  "author": {
                    "type": "string",
                    "description": "Автор книги",
                    "example": "Лев Николаевич Толстой",
                    "maxLength": 100
                  },
                  "year": {
                    "type": "integer",
                    "description": "Год издания",
                    "example": 1869,
                    "minimum": 1000,
                    "maximum": 2030
                  },
                  "genre": {
                    "type": "string",
                    "description": "Жанр книги",
                    "example": "Роман-эпопея",
                    "maxLength": 50
                  },
                  "pages": {
                    "type": "integer",
                    "description": "Количество страниц",
                    "example": 1300,
                    "minimum": 1
                  },
                  "rating": {
                    "type": "integer",
                    "description": "Рейтинг от 0 до 5 звезд",
                    "example": 5,
                    "minimum": 0,
                    "maximum": 5
                  },
                  "status": {
                    "type": "string",
                    "enum": ["unread", "reading", "completed"],
                    "description": "Статус чтения",
                    "example": "completed"
                  },
                  "notes": {
                    "type": "string",
                    "description": "Личные заметки о книге",
                    "example": "Перечитал второй раз - еще лучше!",
                    "maxLength": 1000
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Книга успешно обновлена",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/Book"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Книга не найдена",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "400": {
            "description": "Неверные данные запроса",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Удалить книгу",
        "description": "Удаляет книгу по её идентификатору. Операция необратима",
        "tags": ["Books"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "description": "Уникальный идентификатор книги"
          }
        ],
        "responses": {
          "200": {
            "description": "Книга успешно удалена",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Книга успешно удалена из библиотеки"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Книга не найдена",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "400": {
            "description": "Неверный формат ID",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/books/stats": {
      "get": {
        "summary": "Получить статистику библиотеки",
        "description": "Возвращает общую статистику по всем книгам включая количество по жанрам и статусам чтения",
        "tags": ["Statistics"],
        "responses": {
          "200": {
            "description": "Статистика получена успешно",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "total": {
                          "type": "number",
                          "description": "Общее количество книг в библиотеке",
                          "example": 25
                        },
                        "completed": {
                          "type": "number",
                          "description": "Количество прочитанных книг",
                          "example": 15
                        },
                        "reading": {
                          "type": "number",
                          "description": "Количество книг в процессе чтения",
                          "example": 5
                        },
                        "unread": {
                          "type": "number",
                          "description": "Количество непрочитанных книг",
                          "example": 5
                        },
                        "genres": {
                          "type": "number",
                          "description": "Количество уникальных жанров",
                          "example": 8
                        },
                        "averageRating": {
                          "type": "number",
                          "description": "Средний рейтинг всех книг",
                          "example": 4.2
                        },
                        "totalPages": {
                          "type": "number",
                          "description": "Общее количество страниц всех книг",
                          "example": 12500
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Book": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Уникальный идентификатор книги",
            "example": 1
          },
          "title": {
            "type": "string",
            "description": "Название книги",
            "example": "Война и мир"
          },
          "author": {
            "type": "string",
            "description": "Автор книги",
            "example": "Лев Толстой"
          },
          "year": {
            "type": "integer",
            "description": "Год издания",
            "example": 1869
          },
          "genre": {
            "type": "string",
            "description": "Жанр книги",
            "example": "Классическая литература"
          },
          "pages": {
            "type": "integer",
            "description": "Количество страниц",
            "example": 1225
          },
          "rating": {
            "type": "integer",
            "description": "Рейтинг от 0 до 5 звезд",
            "example": 5
          },
          "status": {
            "type": "string",
            "enum": ["unread", "reading", "completed"],
            "description": "Статус чтения книги",
            "example": "completed"
          },
          "notes": {
            "type": "string",
            "description": "Личные заметки о книге",
            "example": "Великолепное произведение о русской истории и человеческой природе"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Дата и время добавления книги в библиотеку",
            "example": "2024-01-15T10:30:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "Дата и время последнего обновления информации о книге",
            "example": "2024-01-15T14:45:00.000Z"
          }
        },
        "required": [
          "id",
          "title",
          "author",
          "year",
          "genre",
          "pages",
          "rating",
          "status",
          "notes",
          "createdAt",
          "updatedAt"
        ]
      },
      "Error": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "error": {
            "type": "string",
            "description": "Описание ошибки",
            "example": "Книга не найдена в библиотеке"
          }
        },
        "required": ["success", "error"]
      }
    }
  },
  "tags": [
    {
      "name": "Books",
      "description": "Операции с книгами - добавление, просмотр, обновление и удаление из личной библиотеки"
    },
    {
      "name": "Statistics",
      "description": "Статистическая информация о библиотеке книг и прогрессе чтения"
    }
  ]
}
